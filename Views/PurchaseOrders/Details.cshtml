@model PurchaseOrder
@{
    ViewData["Title"] = "PO Details";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-file-invoice-dollar me-3"></i>@Model.InternalPoCode</h1>
            <p class="mb-0 opacity-75">@Model.PoNumber</p>
        </div>
        <div>
            <a asp-action="DownloadPdf" asp-route-id="@Model.PoId" class="btn btn-primary me-2" target="_blank">
                <i class="fas fa-file-pdf me-2"></i>Download PDF
            </a>
            <a asp-action="Edit" asp-route-id="@Model.PoId" class="btn btn-light me-2">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- PO Info -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>PO Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Internal PO Code</label>
                        <p class="fw-bold fs-5 text-primary">@Model.InternalPoCode</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">PO Number</label>
                        <p class="fw-bold">@Model.PoNumber</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted small">PO Date</label>
                        <p>@(Model.PoDate?.ToString("MMM d, yyyy") ?? "N/A")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted small">Start Date</label>
                        <p>@(Model.StartDate?.ToString("MMM d, yyyy") ?? "N/A")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted small">End Date</label>
                        <p>@(Model.EndDate?.ToString("MMM d, yyyy") ?? "N/A")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Info -->
        @if (Model.Customer != null)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Customer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label text-muted small">Customer</label>
                            <p class="fw-bold">@Model.Customer.CustomerName</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted small">Address</label>
                            <p>@Model.Customer.FullAddress</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">GST Number</label>
                            <p><code>@(Model.Customer.GstNumber ?? "N/A")</code></p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Line Items -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>PO Items (@Model.Items.Count)</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Item Description</th>
                                <th class="text-end">Quantity</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Line Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items.OrderBy(i => i.LineNumber))
                            {
                                <tr>
                                    <td>@item.LineNumber</td>
                                    <td>@item.ItemDescription</td>
                                    <td class="text-end">@item.Quantity</td>
                                    <td class="text-end">₹@item.UnitPrice.ToString("N2")</td>
                                    <td class="text-end fw-bold">₹@item.LineTotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="4" class="text-end">Total:</th>
                                <th class="text-end text-primary fs-5">₹@Model.PoAmount.ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Invoices -->
        @if (Model.Invoices.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Related Invoices (@Model.Invoices.Count)</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Invoice #</th>
                                <th>Date</th>
                                <th class="text-end">Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var inv in Model.Invoices)
                            {
                                <tr>
                                    <td><a asp-controller="Invoices" asp-action="Details" asp-route-id="@inv.InvoiceId">@inv.InvoiceNumber</a></td>
                                    <td>@inv.InvoiceDate.ToString("MMM d, yyyy")</td>
                                    <td class="text-end">₹@inv.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @if (inv.IsPaid)
                                        { <span class="badge bg-success">Paid</span> }
                                        else
                                        { <span class="badge bg-warning text-dark">Unpaid</span> }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Summary Sidebar -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Summary</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Status:</span>
                    @if (Model.IsCompleted)
                    { <span class="badge bg-success fs-6">Completed</span> }
                    else
                    { <span class="badge bg-warning text-dark fs-6">Pending</span> }
                </div>
                <hr>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Items:</span>
                    <span class="fw-bold">@Model.Items.Count</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Quantity:</span>
                    <span class="fw-bold">@Model.Items.Sum(i => i.Quantity)</span>
                </div>
                <hr>
                <hr>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Sub Total:</span>
                    <span class="fw-bold">₹@Model.PoAmount.ToString("N2")</span>
                </div>
                @if (Model.CgstPercent > 0)
                {
                    <div class="d-flex justify-content-between align-items-center mb-2 text-muted small">
                        <span>CGST (@Model.CgstPercent%):</span>
                        <span>₹@((Model.PoAmount * Model.CgstPercent / 100).ToString("N2"))</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2 text-muted small">
                        <span>SGST (@Model.SgstPercent%):</span>
                        <span>₹@((Model.PoAmount * Model.SgstPercent / 100).ToString("N2"))</span>
                    </div>
                }
                else if (Model.IgstPercent > 0)
                {
                    <div class="d-flex justify-content-between align-items-center mb-2 text-muted small">
                        <span>IGST (@Model.IgstPercent%):</span>
                        <span>₹@((Model.PoAmount * Model.IgstPercent / 100).ToString("N2"))</span>
                    </div>
                }
                <div class="d-flex justify-content-between align-items-center border-top pt-2">
                    <span class="h6 mb-0">Grand Total:</span>
                    <span class="h4 mb-0 text-success">₹@Model.GrandTotal.ToString("N2")</span>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <a asp-controller="Invoices" asp-action="Create" asp-route-poId="@Model.PoId" class="btn btn-success w-100 mb-2">
                    <i class="fas fa-plus me-2"></i>Create Invoice
                </a>
                <a asp-action="Edit" asp-route-id="@Model.PoId" class="btn btn-outline-primary w-100">
                    <i class="fas fa-edit me-2"></i>Edit PO
                </a>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Created</h6>
            </div>
            <div class="card-body">
                <p class="mb-1">By: <span class="badge bg-secondary">@Model.CreatedByUsername</span></p>
                <p class="mb-0">On: @Model.CreatedDate.ToString("MMM d, yyyy h:mm tt")</p>
            </div>
        </div>
    </div>
</div>
