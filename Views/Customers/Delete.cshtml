@model Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<!-- Page Header -->
<div class="page-header" style="background: linear-gradient(135deg, #dc3545 0%, #c92a2a 100%);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-trash-alt me-3"></i>Delete Customer</h1>
            <p class="mb-0 opacity-75">Confirm customer deletion</p>
        </div>
        <a asp-action="Index" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <p class="lead">Are you sure you want to delete this customer?</p>
                
                <div class="bg-light p-3 rounded mb-4">
                    <div class="row">
                        <div class="col-sm-4 text-muted">Customer Code:</div>
                        <div class="col-sm-8 fw-bold">@Model.CustomerCode</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 text-muted">Customer Name:</div>
                        <div class="col-sm-8 fw-bold">@Model.CustomerName</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 text-muted">State:</div>
                        <div class="col-sm-8">@Model.State</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 text-muted">GST Number:</div>
                        <div class="col-sm-8"><code>@Model.GstNumber</code></div>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    This action will deactivate the customer. The record will be retained for historical purposes.
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CustomerId" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash me-2"></i>Delete Customer
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
