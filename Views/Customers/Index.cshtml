@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Customers";
}

<!-- Page Header -->
<div class="page-header" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-users me-3"></i>Customers</h1>
            <p class="mb-0 opacity-75">Manage customer information</p>
        </div>
        <a asp-action="Create" class="btn btn-light">
            <i class="fas fa-plus me-2"></i>Add Customer
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover" id="customersTable">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Customer Name</th>
                            <th>City</th>
                            <th>State</th>
                            <th>GST Number</th>
                            <th>Contact</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@customer.CustomerId" class="fw-bold text-decoration-none">
                                        @customer.CustomerCode
                                    </a>
                                </td>
                                <td>@customer.CustomerName</td>
                                <td>@customer.City</td>
                                <td>
                                    <span class="badge bg-info">@customer.State</span>
                                </td>
                                <td><code>@customer.GstNumber</code></td>
                                <td>@customer.ContactNumber</td>
                                <td>
                                    @if (customer.IsActive)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check me-1"></i>Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-times me-1"></i>Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-4x text-muted mb-3"></i>
                <p class="text-muted mb-3">No customers found</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add First Customer
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#customersTable').DataTable({
                "pageLength": 25,
                "order": [[1, "asc"]]
            });
        });
    </script>
}
