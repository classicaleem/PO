@using System.Security.Claims
@{
    var role = User.FindFirstValue(ClaimTypes.Role) ?? "";
    var isAdmin = role == "Admin";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}
<!-- Sidebar -->
<aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
    <!-- Brand -->
    <div class="sidebar-brand">
        <a href="@Url.Action("Index", "Home")" class="brand-link">
                <img src="~/images/logo.jpg" alt="SIM Logo" class="brand-image elevation-3" style="opacity: 1; max-height: 40px; background-color: white; border-radius: 4px;">
        </a>
    </div>

    <!-- Sidebar Menu -->
    <div class="sidebar-wrapper">
        <nav class="mt-2">
            <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu" data-accordion="false">
                
                <!-- Dashboard -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link @(currentController == "Home" ? "active" : "")">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Dashboard</p>
                    </a>
                </li>

                <!-- Customers -->
                @if (isAdmin)
                {
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Customers")" class="nav-link @(currentController == "Customers" ? "active" : "")">
                            <i class="nav-icon fas fa-users"></i>
                            <p>Customers</p>
                        </a>
                    </li>
                }

                <!-- Purchase Orders -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "PurchaseOrders")" class="nav-link @(currentController == "PurchaseOrders" ? "active" : "")">
                        <i class="nav-icon fas fa-file-invoice-dollar"></i>
                        <p>Purchase Orders</p>
                    </a>
                </li>

                <!-- Invoices -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Invoices")" class="nav-link @(currentController == "Invoices" ? "active" : "")">
                        <i class="nav-icon fas fa-receipt"></i>
                        <p>Invoices</p>
                    </a>
                </li>

                <!-- Delivery Challans -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "DeliveryChallans")" class="nav-link @(currentController == "DeliveryChallans" ? "active" : "")">
                        <i class="nav-icon fas fa-truck"></i>
                        <p>Delivery Challans</p>
                    </a>
                </li>
                
                <!-- Quotations -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Quotations")" class="nav-link @(currentController == "Quotations" ? "active" : "")">
                        <i class="nav-icon fas fa-file-invoice"></i>
                        <p>Quotations</p>
                    </a>
                </li>

                @if (isAdmin)
                {
                    <!-- Reports (Admin Only) -->
                    <li class="nav-item">
                        <a href="@Url.Action("SalesReport", "Reports")" class="nav-link @(currentAction == "SalesReport" && currentController == "Reports" ? "active" : "")">
                            <i class="nav-icon fas fa-file-invoice-dollar"></i>
                            <p>Sales Report</p>
                        </a>
                    </li>
                }

                <li class="nav-header mt-3">ACCOUNT</li>
                
                <!-- Logout -->
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                        <button type="submit" class="nav-link border-0 bg-transparent text-start w-100" style="cursor: pointer;">
                            <i class="nav-icon fas fa-sign-out-alt"></i>
                            <p>Logout</p>
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
    </div>
</aside>
