@using Microsoft.Extensions.Options
@using HRPackage.Models
@inject IOptions<CompanySettings> CompanySettings
@model Invoice
@{
    ViewData["Title"] = "Print Invoice - " + Model.InvoiceNumber;
    Layout = null;
    var company = CompanySettings.Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { font-family: 'Arial', sans-serif; font-size: 13px; margin: 0; padding: 10px; }
        .invoice-box { border: 1px solid #000; max-width: 210mm; margin: 0 auto; height: 100vh; display: flex; flex-direction: column; }
        
        /* Tables */
        .layout-table { width: 100%; border-collapse: collapse; border-bottom: 1px solid #000; }
        .layout-table td { border-right: 1px solid #000; padding: 5px; vertical-align: top; }
        .layout-table td:last-child { border-right: none; }

        /* Items Grid */
        .items-container { flex-grow: 1; display: flex; flex-direction: column; }
        .items-table { width: 100%; border-collapse: collapse; }
        .items-table th { border-bottom: 1px solid #000; border-right: 1px solid #000; padding: 5px; text-align: center; }
        .items-table th:last-child { border-right: none; }
        .items-table td { border-right: 1px solid #000; padding: 5px; vertical-align: top; }
        .items-table td:last-child { border-right: none; }

        .items-spacer { flex-grow: 1; display: flex; width: 100%; }
        .items-spacer div { border-right: 1px solid #000; }
        .items-spacer div:last-child { border-right: none; }

        /* Footer */
        .footer-section { border-top: 1px solid #000; margin-top: auto; }

        @@media print {
            .no-print { display: none !important; }
            .invoice-box { height: 100%; border: 1px solid #000; }
            body { margin: 0; padding: 0; }
        }
    </style>
</head>
<body>
    <div class="print-btn-container no-print text-center mb-2">
        <button onclick="window.print()" class="btn btn-primary">Print</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back</a>
    </div>

    <div class="invoice-box">
        <!-- Header -->
        <table class="layout-table">
            <tr>
                <td style="width: 30%; text-align: center;">
                     <img src="/images/logo.jpg" alt="LOGO" style="max-width: 80px;" onerror="this.style.display='none'"/>
                     <h2 class="company-title m-0" style="color: darkblue;">SIM</h2>
                </td>
                <td style="width: 30%; text-align: center; vertical-align: middle;">
                    <span style="font-size: 24px; font-weight: bold;">INVOICE</span>
                    <div class="fs-6">Original for Recipient</div>
                </td>
                <td style="width: 40%; font-size: 12px;">
                    <div class="row mb-1"><div class="col-4">Invoice No</div><div class="col-8">: <strong>@Model.InvoiceNumber</strong></div></div>
                    <div class="row mb-1"><div class="col-4">Invoice Date</div><div class="col-8">: @Model.InvoiceDate.ToString("dd-MMM-yyyy")</div></div>
                    <div class="row mb-1"><div class="col-4">Po No</div><div class="col-8">: <strong>@Model.PoNumber</strong></div></div>
                    <div class="row mb-1"><div class="col-4">Po Date</div><div class="col-8">: @(Model.PurchaseOrder?.PoDate?.ToString("dd-MMM-yyyy") ?? "-")</div></div>
                </td>
            </tr>
        </table>

        <!-- Address -->
        <table class="layout-table">
            <tr>
                <td style="width: 50%;">
                    <div class="fw-bold">From : @company.Name.ToUpper()</div>
                    <div>@company.AddressLine1, @company.AddressLine2</div>
                    <div>Email : @company.Email | Ph: @company.Phone</div>
                    <div>GST NO : @company.GstNumber</div>
                </td>
                <td style="width: 50%;">
                    <div class="mb-2">
                        <strong>To : @(Model.Customer?.CustomerName ?? "Cash Customer")</strong><br/>
                        @(Model.Customer?.FullAddress) <br/>
                        <strong>GST NO :</strong> @(Model.Customer?.GstNumber)
                    </div>
                </td>
            </tr>
        </table>

        <!-- Items -->
        <div class="items-container">
            <table class="items-table">
                <thead>
                    <tr>
                        <th style="width: 5%;">S.no</th>
                        <th style="width: 45%;">Description</th>
                        <th style="width: 10%;">Hsncode</th>
                        <th style="width: 10%;">Unit Price</th>
                        <th style="width: 10%;">Qty</th>
                        <th style="width: 20%;">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1; }
                    @foreach(var item in Model.Items)
                    {
                        <tr>
                            <td class="text-center">@i</td>
                            <td>@item.ItemDescription</td>
                            <td class="text-center">-</td>
                            <td class="text-end">@item.UnitPrice.ToString("N2")</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@item.LineAmount.ToString("N2")</td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
            
            <!-- Spacer to push footer down -->
            <div class="items-spacer">
                <div style="width: 5%;"></div>
                <div style="width: 45%;"></div>
                <div style="width: 10%;"></div>
                <div style="width: 10%;"></div>
                <div style="width: 10%;"></div>
                <div style="width: 20%;"></div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer-section">
            <table style="width: 100%; border-collapse: collapse; border-bottom: 1px solid #000;">
                <tr>
                     <td style="width: 65%; border-right: 1px solid #000; padding: 5px; vertical-align: top;">
                         <strong>Remarks:</strong> <br/>
                         <!-- Remarks -->
                         <br/><br/>
                         <div class="amount-words">Rupees Only</div>
                     </td>
                     <td style="width: 35%; padding: 0; vertical-align: top;">
                          <table style="width: 100%; border-collapse: collapse;">
                              <tr>
                                  <td class="p-1 border-bottom border-end">Cgst @@ @(Model.CgstPercent)%</td>
                                  <td class="p-1 border-bottom text-end">@((Model.TotalAmount * Model.CgstPercent / 100).ToString("N2"))</td>
                              </tr>
                              <tr>
                                  <td class="p-1 border-bottom border-end">Sgst @@ @(Model.SgstPercent)%</td>
                                  <td class="p-1 border-bottom text-end">@((Model.TotalAmount * Model.SgstPercent / 100).ToString("N2"))</td>
                              </tr>
                              <tr>
                                  <td class="p-1 border-bottom border-end">Igst @@ @(Model.IgstPercent)%</td>
                                  <td class="p-1 border-bottom text-end">@((Model.TotalAmount * Model.IgstPercent / 100).ToString("N2"))</td>
                              </tr>
                              <tr>
                                  <td class="p-1 border-bottom border-end">Round Off</td>
                                  <td class="p-1 border-bottom text-end">0.00</td>
                              </tr>
                              <tr class="fw-bold">
                                  <td class="p-1 border-end">Grand Total (â‚¹)</td>
                                  <td class="p-1 text-end">@Model.GrandTotal.ToString("N2")</td>
                              </tr>
                          </table>
                     </td>
                </tr>
            </table>

            <table style="width: 100%; border-collapse: collapse;">
                <tr>
                     <td style="width: 50%; border-right: 1px solid #000; padding: 5px; vertical-align: bottom;">
                         <div style="text-decoration: underline; margin-bottom: 5px;">Declaration</div>
                         <small>We declare that this invoice shows the actual price of the goods described and that all particulars are true and correct.</small>
                         <div class="text-center mt-4">
                             <strong>Customer's Seal and Signature</strong>
                         </div>
                     </td>
                     <td style="width: 50%; padding: 5px; text-align: center; vertical-align: bottom;">
                         <div class="mb-5 text-end pe-4"><strong>For @company.Name.ToUpper()</strong></div>
                         <div class="text-end pe-4"><strong>Authorised Signature</strong></div>
                     </td>
                </tr>
            </table>
        </div>
        <div class="text-center border-top p-1 small">
            This is a Computer Generated Invoice
        </div>
    </div>
</body>
</html>
