@model Invoice
@{
    ViewData["Title"] = "Invoice Details";
}

<!-- Page Header -->
<div class="page-header" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-receipt me-3"></i>@Model.InvoiceNumber</h1>
            <p class="mb-0 opacity-75">@Model.InternalPoCode - @Model.PoNumber</p>
        </div>
        <div>
            <a asp-action="PrintInvoice" asp-route-id="@Model.InvoiceId" class="btn btn-outline-light me-2" target="_blank">
                <i class="fas fa-print me-2"></i>Print
            </a>
            <a asp-action="Edit" asp-route-id="@Model.InvoiceId" class="btn btn-light me-2">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Invoice Info -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Invoice Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Invoice Number</label>
                        <p class="fw-bold fs-5 text-success">@Model.InvoiceNumber</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Invoice Date</label>
                        <p class="fw-bold">@Model.InvoiceDate.ToString("MMM d, yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Related PO</label>
                        <p>
                            <a asp-controller="PurchaseOrders" asp-action="Details" asp-route-id="@Model.PoId">
                                @Model.InternalPoCode - @Model.PoNumber
                            </a>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Customer</label>
                        <p class="fw-bold">@Model.CustomerName</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shipping Info -->
        @if (!string.IsNullOrEmpty(Model.ShippingAddress))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-truck me-2"></i>Shipping Address</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.ShippingAddress</p>
                </div>
            </div>
        }

        <!-- Line Items -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Invoice Items (@Model.Items.Count)</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Item Description</th>
                                <th class="text-end">Quantity</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var num = 1; }
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@num</td>
                                    <td>@item.ItemDescription</td>
                                    <td class="text-end">@item.Quantity</td>
                                    <td class="text-end">₹@item.UnitPrice.ToString("N2")</td>
                                    <td class="text-end fw-bold">₹@item.LineAmount.ToString("N2")</td>
                                </tr>
                                num++;
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="4" class="text-end">Total:</th>
                                <th class="text-end text-success fs-5">₹@Model.TotalAmount.ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Sidebar -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Summary</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Payment Status:</span>
                    @if (Model.IsPaid)
                    { <span class="badge bg-success fs-6">Paid</span> }
                    else
                    { <span class="badge bg-warning text-dark fs-6">Unpaid</span> }
                </div>
                <hr>
                <div class="d-flex justify-content-between mb-2">
                    <span>Line Items:</span>
                    <span class="fw-bold">@Model.Items.Count</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Quantity:</span>
                    <span class="fw-bold">@Model.Items.Sum(i => i.Quantity)</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="h6 mb-0">Invoice Total:</span>
                    <span class="h4 mb-0 text-success">₹@Model.TotalAmount.ToString("N2")</span>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <a asp-action="PrintInvoice" asp-route-id="@Model.InvoiceId" class="btn btn-success w-100 mb-2" target="_blank">
                    <i class="fas fa-print me-2"></i>Print Invoice
                </a>
                <a asp-action="Edit" asp-route-id="@Model.InvoiceId" class="btn btn-outline-primary w-100">
                    <i class="fas fa-edit me-2"></i>Edit Invoice
                </a>
            </div>
        </div>
    </div>
</div>
