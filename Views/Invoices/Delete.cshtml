@model Invoice
@{
    ViewData["Title"] = "Delete Invoice";
}

<!-- Page Header -->
<div class="page-header" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-trash-alt me-3"></i>Delete Invoice</h1>
            <p class="mb-0 opacity-75">Confirm deletion of @Model.InvoiceNumber</p>
        </div>
        <a asp-action="Index" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="fas fa-exclamation-triangle fa-4x text-warning mb-3"></i>
                    <h4>Are you sure you want to delete this Invoice?</h4>
                    <p class="text-muted">This action will soft delete the invoice and hide it from the list.</p>
                </div>
                
                <div class="bg-light rounded p-3 mb-4">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <th class="text-muted" style="width: 40%;">Invoice Number</th>
                            <td class="fw-bold">@Model.InvoiceNumber</td>
                        </tr>
                        <tr>
                            <th class="text-muted">PO Number</th>
                            <td>@Model.PoNumber</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Amount</th>
                            <td class="fw-bold text-success">â‚¹@Model.TotalAmount.ToString("N2")</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Invoice Date</th>
                            <td>@Model.InvoiceDate.ToString("MMMM d, yyyy")</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Status</th>
                            <td>
                                @if (Model.IsPaid)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Unpaid</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.InvoiceId" />
                    <div class="d-flex gap-2 justify-content-center">
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash me-2"></i>Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
