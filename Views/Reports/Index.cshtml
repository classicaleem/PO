@model PoReportViewModel
@{
    ViewData["Title"] = "PO Summary Report";
}

<!-- Page Header -->
<div class="page-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-chart-line me-3"></i>PO Summary Report</h1>
            <p class="mb-0 opacity-75">Overview of Purchase Orders and Invoices</p>
        </div>
    </div>
</div>

<div class="row">
    <!-- PO Stats -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Purchase Orders</h5>
            </div>
            <div class="card-body">
                <div class="row text-center g-4">
                    <div class="col-6">
                        <div class="p-3 border rounded bg-light">
                            <h3 class="fw-bold text-primary">@Model.TotalPoCount</h3>
                            <div class="text-muted small">Total POs</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border rounded bg-light">
                            <h3 class="fw-bold text-success">@Model.TotalPoAmount.ToString("N0")</h3>
                            <div class="text-muted small">Total Value (₹)</div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Completed</span>
                    <span class="badge bg-success rounded-pill px-3">@Model.CompletedPoCount</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Pending</span>
                    <span class="badge bg-warning text-dark rounded-pill px-3">@Model.PendingPoCount</span>
                </div>
                
                <div class="mt-4">
                    <div class="progress" style="height: 10px;">
                        @{
                            var totalPos = Model.TotalPoCount > 0 ? Model.TotalPoCount : 1;
                            var completedPercent = (int)((double)Model.CompletedPoCount / totalPos * 100);
                        }
                        <div class="progress-bar bg-success" role="progressbar" style="width: @completedPercent%" aria-valuenow="@completedPercent" aria-valuemin="0" aria-valuemax="100"></div>
                        <div class="progress-bar bg-warning text-dark" role="progressbar" style="width: @(100 - completedPercent)%" aria-valuenow="@(100 - completedPercent)" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Invoice Stats -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Invoices</h5>
            </div>
            <div class="card-body">
                <div class="row text-center g-4">
                    <div class="col-6">
                        <div class="p-3 border rounded bg-light">
                            <h3 class="fw-bold text-primary">@Model.TotalInvoiceCount</h3>
                            <div class="text-muted small">Total Invoices</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border rounded bg-light">
                            <h3 class="fw-bold text-success">@Model.TotalInvoicedAmount.ToString("N0")</h3>
                            <div class="text-muted small">Total Value (₹)</div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Paid Amount</span>
                    <span class="fw-bold text-success">₹@Model.PaidAmount.ToString("N2")</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Unpaid Amount</span>
                    <span class="fw-bold text-danger">₹@Model.UnpaidAmount.ToString("N2")</span>
                </div>

                <div class="mt-4">
                    <div class="progress" style="height: 10px;">
                        @{
                            var totalInv = Model.TotalInvoicedAmount > 0 ? Model.TotalInvoicedAmount : 1;
                            var paidPercent = (int)(Model.PaidAmount / totalInv * 100);
                        }
                        <div class="progress-bar bg-success" role="progressbar" style="width: @paidPercent%" aria-valuenow="@paidPercent" aria-valuemin="0" aria-valuemax="100"></div>
                        <div class="progress-bar bg-danger" role="progressbar" style="width: @(100 - paidPercent)%" aria-valuenow="@(100 - paidPercent)" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
