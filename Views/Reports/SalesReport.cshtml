@{
    ViewData["Title"] = "Sim Sales Report";
}

<link rel="stylesheet" href="~/css/vendor/ag-grid.css" />
<link rel="stylesheet" href="~/css/vendor/ag-theme-alpine.css" />

<!-- Header & Controls -->
<div class="d-flex flex-column mb-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0 text-primary">Sim Sales Report</h3>
        <div class="d-flex gap-2">
             <button onclick="exportToExcel()" class="btn btn-success btn-sm">
                <i class="fas fa-file-excel me-1"></i> Export to Excel
            </button>
        </div>
    </div>
    
    <div class="card shadow-sm border-0">
        <div class="card-body p-2 bg-light border-bottom">
            <div class="row g-2 align-items-center">
                <div class="col-md-2">
                    <label class="form-label small fw-bold mb-0">From Date</label>
                    <input type="date" id="fromDate" class="form-control form-control-sm" />
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold mb-0">To Date</label>
                    <input type="date" id="toDate" class="form-control form-control-sm" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button onclick="loadData()" class="btn btn-sm btn-secondary w-100" style="margin-top: 20px;">
                        <i class="fas fa-sync-alt me-1"></i>Load Report
                    </button>
                </div>
                 <div class="col-md-6 text-end">
                    <!-- Placeholder for future controls -->
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myGrid" class="ag-theme-alpine" style="height: 600px; width: 100%;"></div>

@section Scripts {
    <script src="~/js/vendor/ag-grid-community.min.js"></script>
    <script>
        let gridApi;

        document.addEventListener('DOMContentLoaded', function() {
            // Default: Last 30 Days
            const today = new Date();
            const lastMonth = new Date();
            lastMonth.setDate(today.getDate() - 30);
            
            document.getElementById('toDate').valueAsDate = today;
            document.getElementById('fromDate').valueAsDate = lastMonth;

            loadData();
        });

        const gridOptions = {
            columnDefs: [
                { field: "slNo", headerName: "SlNo", width: 70 },
                { field: "invoiceNo", headerName: "Invoice No", width: 140, filter: 'agTextColumnFilter', sortable: true },
                { 
                    field: "invoiceDate", 
                    headerName: "Invoice Date", 
                    width: 120, 
                    sortable: true,
                    valueFormatter: params => {
                        if (!params.value) return '';
                        const date = new Date(params.value);
                        return date.toLocaleDateString('en-GB', { day: '2-digit', month: '2-digit', year: 'numeric' });
                    }
                },
                { field: "customerName", headerName: "Customer Name", width: 220, filter: 'agTextColumnFilter', sortable: true },
                { field: "state", headerName: "State", width: 120, filter: 'agTextColumnFilter' },
                { field: "customerGstNo", headerName: "Customer GST", width: 150 },
                { field: "projectName", headerName: "Project Name", width: 150 },
                { field: "poNo", headerName: "PO No", width: 140 },
                { field: "hsnCode", headerName: "HSN Code", width: 110 },
                { field: "qty", headerName: "Qty", width: 80, type: 'numericColumn' },
                { field: "pendingQty", headerName: "Pending", width: 90, type: 'numericColumn' },
                { 
                    field: "amount", 
                    headerName: "Amount", 
                    width: 110,
                    type: 'numericColumn', 
                    valueFormatter: params => params.value.toFixed(2) 
                },
                { field: "cgstPercent", headerName: "CGST %", width: 80, type: 'numericColumn' },
                { field: "cgst", headerName: "CGST", width: 90, type: 'numericColumn', valueFormatter: params => params.value.toFixed(2) },
                { field: "sgstPercent", headerName: "SGST %", width: 80, type: 'numericColumn' },
                { field: "sgst", headerName: "SGST", width: 90, type: 'numericColumn', valueFormatter: params => params.value.toFixed(2) },
                { field: "igstPercent", headerName: "IGST %", width: 80, type: 'numericColumn' },
                { field: "igst", headerName: "IGST", width: 90, type: 'numericColumn', valueFormatter: params => params.value.toFixed(2) },
                { field: "roundOff", headerName: "Round Off", width: 90, type: 'numericColumn', valueFormatter: params => params.value.toFixed(2) },
                { 
                    field: "totalAmount", 
                    headerName: "Total", 
                    width: 130,
                    type: 'numericColumn', 
                    valueFormatter: params => params.value.toFixed(2),
                    cellStyle: { fontWeight: 'bold' } 
                },
                //{ field: "gstStatus", headerName: "GST Status", width: 110 }, // Hidden as per request
                { 
                    field: "paymentStatus", 
                    headerName: "Payment Status", 
                    width: 140,
                    cellClassRules: {
                        'bg-success text-white fw-bold': params => params.value && (params.value.toLowerCase() === 'received' || params.value.toLowerCase() === 'paid'),
                        'text-muted': params => params.value && params.value.toLowerCase() === 'pending'
                    }
                }
            ],
            defaultColDef: {
                resizable: true,
                sortable: true, 
                filter: true,
            },
            pagination: true,
            paginationPageSize: 20, // REVERTED REQUEST: Change default to 20
            paginationPageSizeSelector: [20, 50, 100, 500],
            rowHeight: 35,
            headerHeight: 40,
            animateRows: true,
            rowClassRules: {
                'bg-danger text-white': params => params.data.paymentStatus && params.data.paymentStatus.toLowerCase() === 'cancel'
            }
        };

        const gridDiv = document.querySelector('#myGrid');
        gridApi = agGrid.createGrid(gridDiv, gridOptions);

        function loadData() {
            const from = document.getElementById('fromDate').value;
            const to = document.getElementById('toDate').value;
            
            if(gridApi) {
                gridApi.showLoadingOverlay();
            }

            fetch(`/Reports/GetSalesReportJson?fromDate=${from}&toDate=${to}`)
                .then(response => response.json())
                .then(data => {
                    gridApi.setGridOption('rowData', data);
                })
                .catch(error => {
                    console.error('Error:', error);
                    gridApi.setGridOption('rowData', []);
                });
        }

        function exportToExcel() {
            if(gridApi) {
                gridApi.exportDataAsCsv({
                    fileName: 'Sim_Sales_Report.csv'
                });
            }
        }
    </script>
}
