@model PendingQuantityReportViewModel
@{
    ViewData["Title"] = "Pending Quantity Report";
}

<!-- Page Header -->
<div class="page-header" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-balance-scale me-3"></i>Pending Quantity Report</h1>
            <p class="mb-0 opacity-75">Track pending items across all Purchase Orders</p>
        </div>
        <div>
             <button onclick="window.print()" class="btn btn-light"><i class="fas fa-print me-2"></i>Print Report</button>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.PoSummaries.Any())
        {
            <div class="accordion" id="pendingReportAccordion">
                @foreach (var po in Model.PoSummaries)
                {
                    // Calculate overall pending percentage for progress bar
                    var totalOrdered = po.TotalOrderedQuantity;
                    var totalInvoiced = po.TotalInvoicedQuantity;
                    var percent = totalOrdered > 0 ? (int)((totalInvoiced / (double)totalOrdered) * 100) : 0;
                    var isCompleted = totalInvoiced >= totalOrdered;

                    if (!isCompleted) // Only show likely relevant ones, or show all? Requirements say "Pending Quantity Report", so usually show anything with pending. Or show all to see status.
                    // Let's show all but highlight pending.
                    {
                        <div class="accordion-item mb-3 border">
                            <h2 class="accordion-header" id="heading_@po.PoId">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@po.PoId" aria-expanded="false" aria-controls="collapse_@po.PoId">
                                    <div class="d-flex w-100 justify-content-between align-items-center me-3">
                                        <div>
                                            <strong>@po.InternalPoCode</strong> <span class="text-muted ms-2">@po.CustomerName</span>
                                            <div class="small text-muted">@po.PoNumber | @(po.PoDate?.ToString("MMM d, yyyy") ?? "N/A")</div>
                                        </div>
                                        <div class="d-flex align-items-center" style="min-width: 300px;">
                                            <div class="flex-grow-1 me-3">
                                                <div class="d-flex justify-content-between small mb-1">
                                                    <span>Invoiced: @totalInvoiced / @totalOrdered</span>
                                                    <span>@percent%</span>
                                                </div>
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: @percent%" aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div>
                                            <span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i>Pending</span>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="collapse_@po.PoId" class="accordion-collapse collapse" aria-labelledby="heading_@po.PoId" data-bs-parent="#pendingReportAccordion">
                                <div class="accordion-body bg-light">
                                    <table class="table table-sm table-bordered bg-white mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>#</th>
                                                <th>Item Description</th>
                                                <th class="text-end" style="width: 150px;">Ordered</th>
                                                <th class="text-end" style="width: 150px;">Invoiced</th>
                                                <th class="text-end" style="width: 150px;">Pending</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in po.ItemDetails)
                                            {
                                                var pending = item.OrderedQuantity - item.InvoicedQuantity;
                                                <tr class="@(pending > 0 ? "table-warning" : "")">
                                                    <td>@item.LineNumber</td>
                                                    <td>@item.ItemDescription</td>
                                                    <td class="text-end">@item.OrderedQuantity</td>
                                                    <td class="text-end">@item.InvoicedQuantity</td>
                                                    <td class="text-end fw-bold">@pending</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            @if (!Model.PoSummaries.Any(p => p.TotalOrderedQuantity > p.TotalInvoicedQuantity))
            {
                 <div class="text-center py-5">
                    <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                    <p class="text-muted mb-0">Great job! No pending quantities found.</p>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                <p class="text-muted mb-0">No data available.</p>
            </div>
        }
    </div>
</div>
