@model IEnumerable<Quotation>
@{
    ViewData["Title"] = "Quotations";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Quotations</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> New Quotation</a>
</div>



<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Quotation No</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Valid Until</th>
                    <th>Total Amt</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.QuotationNo</td>
                        <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                        <td>@(item.Customer?.CustomerName ?? "-")</td>
                        <td>@(item.ValidUntil?.ToString("dd-MMM-yyyy") ?? "-")</td>
                        <td>@item.TotalAmount.ToString("N2")</td>
                        <td>
                            <a asp-action="DownloadPdf" asp-route-id="@item.QuotationId" class="btn btn-sm btn-info"><i class="fas fa-file-pdf"></i></a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.QuotationId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')"><i class="fas fa-trash"></i></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
